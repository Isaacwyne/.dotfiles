[user]
	name = Isaac Ruvuza
	email = ruvuzaisaac@gmail.com
[core]
	editor = vim
	pager = delta
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[init]
	defaultBranch = main
[color]
	ui = auto
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[web]
	browser = brave
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
	linenumbers = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
